<h1>Books</h1>

    <%= form_tag(books_path, role: "search", method: :get) do %>
      <%= label_tag(:search, "Search for:") %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag("Search") %>
    <% end %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Year</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><strong><%= book.title%></strong> by <%= book.author %></td>
          <td><%= book.year %></td>
          <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Show',book_path(book) %></button></td>
          <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Edit', edit_book_path(book) %></button></td>
          <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', book_path(book), method: :delete %></button></td>
        </tr>
      <% end %>
    </tbody>
    
    
